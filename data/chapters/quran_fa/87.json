{
  "result": [
    {
      "id": "5949",
      "sura": "87",
      "aya": "1",
      "arabic_text": "سَبِّحِ ٱسۡمَ رَبِّكَ ٱلۡأَعۡلَى",
      "translation": "نام پروردگار بلند مرتبه‌ات را به پاکی یاد کن.",
      "footnotes": ""
    },
    {
      "id": "5950",
      "sura": "87",
      "aya": "2",
      "arabic_text": "ٱلَّذِي خَلَقَ فَسَوَّىٰ",
      "translation": "[همان ذاتی] که [انسان را] آفرید و هماهنگ و متعادل ساخت.",
      "footnotes": ""
    },
    {
      "id": "5951",
      "sura": "87",
      "aya": "3",
      "arabic_text": "وَٱلَّذِي قَدَّرَ فَهَدَىٰ",
      "translation": "و [همان] ذاتی‌ که اندازه‌گیری کرد و [به شایستگی آفرید] و سپس هدایت نمود.",
      "footnotes": ""
    },
    {
      "id": "5952",
      "sura": "87",
      "aya": "4",
      "arabic_text": "وَٱلَّذِيٓ أَخۡرَجَ ٱلۡمَرۡعَىٰ",
      "translation": "و [آن] ذاتی‌ که چراگاه را [برای تغذیۀ جانداران] رویانید.",
      "footnotes": ""
    },
    {
      "id": "5953",
      "sura": "87",
      "aya": "5",
      "arabic_text": "فَجَعَلَهُۥ غُثَآءً أَحۡوَىٰ",
      "translation": "سپس آن را خشک و سیاه گردانید.",
      "footnotes": ""
    },
    {
      "id": "5954",
      "sura": "87",
      "aya": "6",
      "arabic_text": "سَنُقۡرِئُكَ فَلَا تَنسَىٰٓ",
      "translation": "ما به زودی [قرآن را] بر تو می‌خوانیم؛ پس تو هرگز [آن را] فراموش نخواهی کرد؛",
      "footnotes": ""
    },
    {
      "id": "5955",
      "sura": "87",
      "aya": "7",
      "arabic_text": "إِلَّا مَا شَآءَ ٱللَّهُۚ إِنَّهُۥ يَعۡلَمُ ٱلۡجَهۡرَ وَمَا يَخۡفَىٰ",
      "translation": "مگر آنچه را که الله بخواهد؛ همانا او آشکار و نهان را می‌داند.",
      "footnotes": ""
    },
    {
      "id": "5956",
      "sura": "87",
      "aya": "8",
      "arabic_text": "وَنُيَسِّرُكَ لِلۡيُسۡرَىٰ",
      "translation": "و آسان‌ترین [راه‌] را برایت فراهم مى‌گردانیم.",
      "footnotes": ""
    },
    {
      "id": "5957",
      "sura": "87",
      "aya": "9",
      "arabic_text": "فَذَكِّرۡ إِن نَّفَعَتِ ٱلذِّكۡرَىٰ",
      "translation": "اگر پند مفید باشد، [مردم را با آیات قرآن] پند ده.",
      "footnotes": ""
    },
    {
      "id": "5958",
      "sura": "87",
      "aya": "10",
      "arabic_text": "سَيَذَّكَّرُ مَن يَخۡشَىٰ",
      "translation": "به زودی کسی‌ که [از الله] می‌ترسد، پند می‌پذیرد.",
      "footnotes": ""
    },
    {
      "id": "5959",
      "sura": "87",
      "aya": "11",
      "arabic_text": "وَيَتَجَنَّبُهَا ٱلۡأَشۡقَى",
      "translation": "و بدبخت‌ترین [مردم،] از آن دوری می‌گزیند؛",
      "footnotes": ""
    },
    {
      "id": "5960",
      "sura": "87",
      "aya": "12",
      "arabic_text": "ٱلَّذِي يَصۡلَى ٱلنَّارَ ٱلۡكُبۡرَىٰ",
      "translation": "[همان] کسی‌ که در آتش بزرگ [جهنم] درخواهد آمد،",
      "footnotes": ""
    },
    {
      "id": "5961",
      "sura": "87",
      "aya": "13",
      "arabic_text": "ثُمَّ لَا يَمُوتُ فِيهَا وَلَا يَحۡيَىٰ",
      "translation": "و در آن [آتش] نه می‌میرد و نه زنده می‌مانَد.",
      "footnotes": ""
    },
    {
      "id": "5962",
      "sura": "87",
      "aya": "14",
      "arabic_text": "قَدۡ أَفۡلَحَ مَن تَزَكَّىٰ",
      "translation": "یقیناً کسی ‌که خود را [از کفرو گناه] پاک کند، رستگار خواهد شد؛",
      "footnotes": ""
    },
    {
      "id": "5963",
      "sura": "87",
      "aya": "15",
      "arabic_text": "وَذَكَرَ ٱسۡمَ رَبِّهِۦ فَصَلَّىٰ",
      "translation": "و [نیز کسی که] نام پروردگارش را یاد کند و نماز بگزارد.",
      "footnotes": ""
    },
    {
      "id": "5964",
      "sura": "87",
      "aya": "16",
      "arabic_text": "بَلۡ تُؤۡثِرُونَ ٱلۡحَيَوٰةَ ٱلدُّنۡيَا",
      "translation": "ولی شما [مردم،] زندگی دنیا را [بر آخرت] ترجیح می‌دهید؛",
      "footnotes": ""
    },
    {
      "id": "5965",
      "sura": "87",
      "aya": "17",
      "arabic_text": "وَٱلۡأٓخِرَةُ خَيۡرٞ وَأَبۡقَىٰٓ",
      "translation": "در حالی‌ که آخرت، بهتر و پاینده‌تر است.",
      "footnotes": ""
    },
    {
      "id": "5966",
      "sura": "87",
      "aya": "18",
      "arabic_text": "إِنَّ هَٰذَا لَفِي ٱلصُّحُفِ ٱلۡأُولَىٰ",
      "translation": "به راستی این [پندها] در کتاب‌های آسمانی پیشین [نیز] بود؛",
      "footnotes": ""
    },
    {
      "id": "5967",
      "sura": "87",
      "aya": "19",
      "arabic_text": "صُحُفِ إِبۡرَٰهِيمَ وَمُوسَىٰ",
      "translation": "کتاب‌های ابراهیم و موسی.",
      "footnotes": ""
    }
  ]
}
