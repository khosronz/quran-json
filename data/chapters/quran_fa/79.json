{
  "result": [
    {
      "id": "5713",
      "sura": "79",
      "aya": "1",
      "arabic_text": "وَٱلنَّٰزِعَٰتِ غَرۡقٗا",
      "translation": "سوگند به فرشتگانی که جان [کافران] را به شدت بیرون می‌کشند.",
      "footnotes": ""
    },
    {
      "id": "5714",
      "sura": "79",
      "aya": "2",
      "arabic_text": "وَٱلنَّٰشِطَٰتِ نَشۡطٗا",
      "translation": "و سوگند به فرشتگانی که جان [مؤمنان] را به نرمی و آسانی می‌گیرند.",
      "footnotes": ""
    },
    {
      "id": "5715",
      "sura": "79",
      "aya": "3",
      "arabic_text": "وَٱلسَّٰبِحَٰتِ سَبۡحٗا",
      "translation": "و سوگند به فرشتگانی که [به امرِ الله، از آسمان به سوی زمین و بالعکس] شناورند.",
      "footnotes": ""
    },
    {
      "id": "5716",
      "sura": "79",
      "aya": "4",
      "arabic_text": "فَٱلسَّٰبِقَٰتِ سَبۡقٗا",
      "translation": "و سوگند به فرشتگانی که [در اجرای اوامر الهی] بر یکدیگر سبقت می‌گیرند.",
      "footnotes": ""
    },
    {
      "id": "5717",
      "sura": "79",
      "aya": "5",
      "arabic_text": "فَٱلۡمُدَبِّرَٰتِ أَمۡرٗا",
      "translation": "و سوگند به فرشتگانی [که به امر الهی] کار‌‌ها را تدبیر می‌کنند.",
      "footnotes": ""
    },
    {
      "id": "5718",
      "sura": "79",
      "aya": "6",
      "arabic_text": "يَوۡمَ تَرۡجُفُ ٱلرَّاجِفَةُ",
      "translation": "روزی‌ که [پس از اولین دمیدن در صور] زمین [و کوه‌ها و همه چیز] به لرزه درآید",
      "footnotes": ""
    },
    {
      "id": "5719",
      "sura": "79",
      "aya": "7",
      "arabic_text": "تَتۡبَعُهَا ٱلرَّادِفَةُ",
      "translation": "[و] در پی آن، [دمیدن دوم حشر] بیاید،",
      "footnotes": ""
    },
    {
      "id": "5720",
      "sura": "79",
      "aya": "8",
      "arabic_text": "قُلُوبٞ يَوۡمَئِذٖ وَاجِفَةٌ",
      "translation": "در آن روز، دل‌هایی سخت مضطرب [و ترسان] هستند.",
      "footnotes": ""
    },
    {
      "id": "5721",
      "sura": "79",
      "aya": "9",
      "arabic_text": "أَبۡصَٰرُهَا خَٰشِعَةٞ",
      "translation": "و چشم‌های آنان [از ترس و شرمساری] فرو افتاده است.",
      "footnotes": ""
    },
    {
      "id": "5722",
      "sura": "79",
      "aya": "10",
      "arabic_text": "يَقُولُونَ أَءِنَّا لَمَرۡدُودُونَ فِي ٱلۡحَافِرَةِ",
      "translation": "[کافران در دنیا] می‌گفتند: «آیا ما [پس از مرگ، دوباره] به حال اول خود باز‌گردانده می‌شویم؟",
      "footnotes": ""
    },
    {
      "id": "5723",
      "sura": "79",
      "aya": "11",
      "arabic_text": "أَءِذَا كُنَّا عِظَٰمٗا نَّخِرَةٗ",
      "translation": "آیا هنگامی‌ که استخوان‌هایی پوسیده شدیم [و به خاک تبدیل گشتیم، باز هم زنده می‌شویم]»؟",
      "footnotes": ""
    },
    {
      "id": "5724",
      "sura": "79",
      "aya": "12",
      "arabic_text": "قَالُواْ تِلۡكَ إِذٗا كَرَّةٌ خَاسِرَةٞ",
      "translation": "می‌گفتند: «[اگر چنین وعده‌ای درست باشد،] آنگاه آن بازگشتی زیانبار است».",
      "footnotes": ""
    },
    {
      "id": "5725",
      "sura": "79",
      "aya": "13",
      "arabic_text": "فَإِنَّمَا هِيَ زَجۡرَةٞ وَٰحِدَةٞ",
      "translation": "آن [بازگشت،] تنها [به] یک بانگِ مهیب است [و بس].",
      "footnotes": ""
    },
    {
      "id": "5726",
      "sura": "79",
      "aya": "14",
      "arabic_text": "فَإِذَا هُم بِٱلسَّاهِرَةِ",
      "translation": "و ناگهان همگی بر عرصۀ زمین [محشر] ظاهر می‌شوند.",
      "footnotes": ""
    },
    {
      "id": "5727",
      "sura": "79",
      "aya": "15",
      "arabic_text": "هَلۡ أَتَىٰكَ حَدِيثُ مُوسَىٰٓ",
      "translation": "[ای پیامبر،] آیا داستان موسی به تو رسیده است؟",
      "footnotes": ""
    },
    {
      "id": "5728",
      "sura": "79",
      "aya": "16",
      "arabic_text": "إِذۡ نَادَىٰهُ رَبُّهُۥ بِٱلۡوَادِ ٱلۡمُقَدَّسِ طُوًى",
      "translation": "آنگاه که پروردگارش او را در سرزمین مقدس «طُوی» ندا داد [و فرمود:]",
      "footnotes": ""
    },
    {
      "id": "5729",
      "sura": "79",
      "aya": "17",
      "arabic_text": "ٱذۡهَبۡ إِلَىٰ فِرۡعَوۡنَ إِنَّهُۥ طَغَىٰ",
      "translation": "«به سوی فرعون برو که او طغیان کرده است،",
      "footnotes": ""
    },
    {
      "id": "5730",
      "sura": "79",
      "aya": "18",
      "arabic_text": "فَقُلۡ هَل لَّكَ إِلَىٰٓ أَن تَزَكَّىٰ",
      "translation": "و به او بگو: «آیا می‌خواهی [از کفر و گناه] پاک شوی؟",
      "footnotes": ""
    },
    {
      "id": "5731",
      "sura": "79",
      "aya": "19",
      "arabic_text": "وَأَهۡدِيَكَ إِلَىٰ رَبِّكَ فَتَخۡشَىٰ",
      "translation": "و من تو را به سوی پروردگارت هدایت کنم تا [از او] بترسی [و فرمانبردار شوی]؟",
      "footnotes": ""
    },
    {
      "id": "5732",
      "sura": "79",
      "aya": "20",
      "arabic_text": "فَأَرَىٰهُ ٱلۡأٓيَةَ ٱلۡكُبۡرَىٰ",
      "translation": "پس [موسی] معجزۀ بزرگ را به او نشان داد.",
      "footnotes": ""
    },
    {
      "id": "5733",
      "sura": "79",
      "aya": "21",
      "arabic_text": "فَكَذَّبَ وَعَصَىٰ",
      "translation": "اما او تکذیب و سرکشی کرد.",
      "footnotes": ""
    },
    {
      "id": "5734",
      "sura": "79",
      "aya": "22",
      "arabic_text": "ثُمَّ أَدۡبَرَ يَسۡعَىٰ",
      "translation": "سپس [به حق] پشت کرد و به کوشش و تلاش [علیه موسی] پرداخت.",
      "footnotes": ""
    },
    {
      "id": "5735",
      "sura": "79",
      "aya": "23",
      "arabic_text": "فَحَشَرَ فَنَادَىٰ",
      "translation": "آنگاه [قومش را] جمع کرد و ندا داد",
      "footnotes": ""
    },
    {
      "id": "5736",
      "sura": "79",
      "aya": "24",
      "arabic_text": "فَقَالَ أَنَا۠ رَبُّكُمُ ٱلۡأَعۡلَىٰ",
      "translation": "و گفت: «من پروردگارِ برتر شما هستم».",
      "footnotes": ""
    },
    {
      "id": "5737",
      "sura": "79",
      "aya": "25",
      "arabic_text": "فَأَخَذَهُ ٱللَّهُ نَكَالَ ٱلۡأٓخِرَةِ وَٱلۡأُولَىٰٓ",
      "translation": "الله او را به عذاب آخرت و دنیا گرفتار کرد.",
      "footnotes": ""
    },
    {
      "id": "5738",
      "sura": "79",
      "aya": "26",
      "arabic_text": "إِنَّ فِي ذَٰلِكَ لَعِبۡرَةٗ لِّمَن يَخۡشَىٰٓ",
      "translation": "بی‌گمان، در این [واقعه،] برای هر کس ‌که [از الله] می‌ترسد، عبرتی است.",
      "footnotes": ""
    },
    {
      "id": "5739",
      "sura": "79",
      "aya": "27",
      "arabic_text": "ءَأَنتُمۡ أَشَدُّ خَلۡقًا أَمِ ٱلسَّمَآءُۚ بَنَىٰهَا",
      "translation": "آیا آفرینش شما [بعد از مرگ] سخت‌تر است یا آسمانی که [الله] آن را بنا کرد؟",
      "footnotes": ""
    },
    {
      "id": "5740",
      "sura": "79",
      "aya": "28",
      "arabic_text": "رَفَعَ سَمۡكَهَا فَسَوَّىٰهَا",
      "translation": "سقف آن را بر افراشت و به آن شکل و نظم داد،",
      "footnotes": ""
    },
    {
      "id": "5741",
      "sura": "79",
      "aya": "29",
      "arabic_text": "وَأَغۡطَشَ لَيۡلَهَا وَأَخۡرَجَ ضُحَىٰهَا",
      "translation": "و شبش را تاریک و روزش را روشن گردانید،",
      "footnotes": ""
    },
    {
      "id": "5742",
      "sura": "79",
      "aya": "30",
      "arabic_text": "وَٱلۡأَرۡضَ بَعۡدَ ذَٰلِكَ دَحَىٰهَآ",
      "translation": "و زمین را بعد از آن گسترانید،",
      "footnotes": ""
    },
    {
      "id": "5743",
      "sura": "79",
      "aya": "31",
      "arabic_text": "أَخۡرَجَ مِنۡهَا مَآءَهَا وَمَرۡعَىٰهَا",
      "translation": "و از آن، آب [چشمه‌ها و چاه‌ها و] چراگاهش را بیرون آورد،",
      "footnotes": ""
    },
    {
      "id": "5744",
      "sura": "79",
      "aya": "32",
      "arabic_text": "وَٱلۡجِبَالَ أَرۡسَىٰهَا",
      "translation": "و کوه‌ها را محکم و استوار [بر روی زمین] قرار داد.",
      "footnotes": ""
    },
    {
      "id": "5745",
      "sura": "79",
      "aya": "33",
      "arabic_text": "مَتَٰعٗا لَّكُمۡ وَلِأَنۡعَٰمِكُمۡ",
      "translation": "[همۀ اینها] برای بهره‌گیری شما و چهارپایانتان است.",
      "footnotes": ""
    },
    {
      "id": "5746",
      "sura": "79",
      "aya": "34",
      "arabic_text": "فَإِذَا جَآءَتِ ٱلطَّآمَّةُ ٱلۡكُبۡرَىٰ",
      "translation": "هنگامی‌ که [آن] حادثۀ بزرگ [قیامت] فرا رسد،",
      "footnotes": ""
    },
    {
      "id": "5747",
      "sura": "79",
      "aya": "35",
      "arabic_text": "يَوۡمَ يَتَذَكَّرُ ٱلۡإِنسَٰنُ مَا سَعَىٰ",
      "translation": "در آن روز، انسان [تمام اعمال و] تلاش‌های خود را به یاد می‌آورد.",
      "footnotes": ""
    },
    {
      "id": "5748",
      "sura": "79",
      "aya": "36",
      "arabic_text": "وَبُرِّزَتِ ٱلۡجَحِيمُ لِمَن يَرَىٰ",
      "translation": "و جهنم برای هر بیننده‌ای آشکار می‌شود.",
      "footnotes": ""
    },
    {
      "id": "5749",
      "sura": "79",
      "aya": "37",
      "arabic_text": "فَأَمَّا مَن طَغَىٰ",
      "translation": "اما آن کس که طغیان [و سرکشی] کرده باشد",
      "footnotes": ""
    },
    {
      "id": "5750",
      "sura": "79",
      "aya": "38",
      "arabic_text": "وَءَاثَرَ ٱلۡحَيَوٰةَ ٱلدُّنۡيَا",
      "translation": "و زندگی دنیا را [بر آخرت] ترجیح داده باشد،",
      "footnotes": ""
    },
    {
      "id": "5751",
      "sura": "79",
      "aya": "39",
      "arabic_text": "فَإِنَّ ٱلۡجَحِيمَ هِيَ ٱلۡمَأۡوَىٰ",
      "translation": "بی‌تردید، جهنم جایگاه اوست.",
      "footnotes": ""
    },
    {
      "id": "5752",
      "sura": "79",
      "aya": "40",
      "arabic_text": "وَأَمَّا مَنۡ خَافَ مَقَامَ رَبِّهِۦ وَنَهَى ٱلنَّفۡسَ عَنِ ٱلۡهَوَىٰ",
      "translation": "و اما کسی‌ که از ایستادن در حضور پروردگارش بیمناک بوده و نفس را از هوی [و هوس] بازداشته باشد،",
      "footnotes": ""
    },
    {
      "id": "5753",
      "sura": "79",
      "aya": "41",
      "arabic_text": "فَإِنَّ ٱلۡجَنَّةَ هِيَ ٱلۡمَأۡوَىٰ",
      "translation": "قطعاً بهشت جایگاه اوست.",
      "footnotes": ""
    },
    {
      "id": "5754",
      "sura": "79",
      "aya": "42",
      "arabic_text": "يَسۡـَٔلُونَكَ عَنِ ٱلسَّاعَةِ أَيَّانَ مُرۡسَىٰهَا",
      "translation": "[ای پیامبر،] دربارۀ قیامت از تو می‌پرسند که در چه زمانی واقع می‌شود؟",
      "footnotes": ""
    },
    {
      "id": "5755",
      "sura": "79",
      "aya": "43",
      "arabic_text": "فِيمَ أَنتَ مِن ذِكۡرَىٰهَآ",
      "translation": "تو را با یادآوری این سخن چه کار است؟",
      "footnotes": ""
    },
    {
      "id": "5756",
      "sura": "79",
      "aya": "44",
      "arabic_text": "إِلَىٰ رَبِّكَ مُنتَهَىٰهَآ",
      "translation": "[سرانجام و] منتهای [علمِ] آن، نزد پروردگار توست.",
      "footnotes": ""
    },
    {
      "id": "5757",
      "sura": "79",
      "aya": "45",
      "arabic_text": "إِنَّمَآ أَنتَ مُنذِرُ مَن يَخۡشَىٰهَا",
      "translation": "تو فقط بیم‌دهندۀ کسانی هستی که از آن [= قیامت] می‌ترسند.",
      "footnotes": ""
    },
    {
      "id": "5758",
      "sura": "79",
      "aya": "46",
      "arabic_text": "كَأَنَّهُمۡ يَوۡمَ يَرَوۡنَهَا لَمۡ يَلۡبَثُوٓاْ إِلَّا عَشِيَّةً أَوۡ ضُحَىٰهَا",
      "translation": "روزی‌ که [کافران قیامت را] ببینند، [چنین احساس می‌کنند که] گویی [در دنیا] جز یک شامگاه یا بامداد به سر نبرده‌اند.",
      "footnotes": ""
    }
  ]
}
