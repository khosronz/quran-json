  "result": [
    {
      "id": "6180",
      "sura": "104",
      "aya": "1",
      "arabic_text": "وَيۡلٞ لِّكُلِّ هُمَزَةٖ لُّمَزَةٍ",
      "translation": "وای بر هر غیبت‌کننده [و] عیبجوی‌!",
      "footnotes": ""
    },
    {
      "id": "6181",
      "sura": "104",
      "aya": "2",
      "arabic_text": "ٱلَّذِي جَمَعَ مَالٗا وَعَدَّدَهُۥ",
      "translation": "[همان] کسی که مال فراونی گرد می‌آورد و آن را بارها می‌شمارد.",
      "footnotes": ""
    },
    {
      "id": "6182",
      "sura": "104",
      "aya": "3",
      "arabic_text": "يَحۡسَبُ أَنَّ مَالَهُۥٓ أَخۡلَدَهُۥ",
      "translation": "گمان می‌کند که مالَش او را جاودانه می‌سازد.",
      "footnotes": ""
    },
    {
      "id": "6183",
      "sura": "104",
      "aya": "4",
      "arabic_text": "كَلَّاۖ لَيُنۢبَذَنَّ فِي ٱلۡحُطَمَةِ",
      "translation": "هرگز چنین نیست [که او گمان می‌کند]؛ قطعاً در آتشِ درهم‌کوبنده انداخته خواهد شد.",
      "footnotes": ""
    },
    {
      "id": "6184",
      "sura": "104",
      "aya": "5",
      "arabic_text": "وَمَآ أَدۡرَىٰكَ مَا ٱلۡحُطَمَةُ",
      "translation": "و [ای پیامبر،] تو چه می‌دانی که آتشِ درهم‌کوبنده چیست؟",
      "footnotes": ""
    },
    {
      "id": "6185",
      "sura": "104",
      "aya": "6",
      "arabic_text": "نَارُ ٱللَّهِ ٱلۡمُوقَدَةُ",
      "translation": "آتش برافروختۀ الهی است؛",
      "footnotes": ""
    },
    {
      "id": "6186",
      "sura": "104",
      "aya": "7",
      "arabic_text": "ٱلَّتِي تَطَّلِعُ عَلَى ٱلۡأَفۡـِٔدَةِ",
      "translation": "[آتشی] که بر دل‌ها چیره می‌گردد [و می‌سوزانَد].",
      "footnotes": ""
    },
    {
      "id": "6187",
      "sura": "104",
      "aya": "8",
      "arabic_text": "إِنَّهَا عَلَيۡهِم مُّؤۡصَدَةٞ",
      "translation": "بی‌گمان، آن [آتش] بر آنان بسته شده [و از هر سو محاصره‌شان کرده] است.",
      "footnotes": ""
    },
    {
      "id": "6188",
      "sura": "104",
      "aya": "9",
      "arabic_text": "فِي عَمَدٖ مُّمَدَّدَةِۭ",
      "translation": "[افروخته] در ستون‌های بلند است.",
      "footnotes": ""
    }
  ]
}
