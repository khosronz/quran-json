      "sura": "102",
      "aya": "1",
      "arabic_text": "أَلۡهَىٰكُمُ ٱلتَّكَاثُرُ",
      "translation": "زیاده‌خواهی، شما را به خود مشغول [و از یادِ پروردگار غافل] ساخت",
      "footnotes": ""
    },
    {
      "id": "6170",
      "sura": "102",
      "aya": "2",
      "arabic_text": "حَتَّىٰ زُرۡتُمُ ٱلۡمَقَابِرَ",
      "translation": "تا [پایانِ] كارتان به گورستان رسید.",
      "footnotes": ""
    },
    {
      "id": "6171",
      "sura": "102",
      "aya": "3",
      "arabic_text": "كَلَّا سَوۡفَ تَعۡلَمُونَ",
      "translation": "هرگز چنین نیست [که شما می‌پندارید]؛ به زودی خواهید دانست.",
      "footnotes": ""
    },
    {
      "id": "6172",
      "sura": "102",
      "aya": "4",
      "arabic_text": "ثُمَّ كَلَّا سَوۡفَ تَعۡلَمُونَ",
      "translation": "باز [هم] چنین نیست؛ به زودی خواهید دانست.",
      "footnotes": ""
    },
    {
      "id": "6173",
      "sura": "102",
      "aya": "5",
      "arabic_text": "كَلَّا لَوۡ تَعۡلَمُونَ عِلۡمَ ٱلۡيَقِينِ",
      "translation": "چنین نیست [که شما گمان می‌کنید]؛ اگر به دانشِ یقینی [و تردیدناپذیر، حقیقتِ قیامت را] می‌دانستید، [از زیاده‌خواهی و افتخار به اموال و فرزندانتان دست برمی‌داشتید].",
      "footnotes": ""
    },
    {
      "id": "6174",
      "sura": "102",
      "aya": "6",
      "arabic_text": "لَتَرَوُنَّ ٱلۡجَحِيمَ",
      "translation": "سوگند که دوزخ را خواهید دید.",
      "footnotes": ""
    },
    {
      "id": "6175",
      "sura": "102",
      "aya": "7",
      "arabic_text": "ثُمَّ لَتَرَوُنَّهَا عَيۡنَ ٱلۡيَقِينِ",
      "translation": "باز هم سوگند که آن را با چشم یقین خواهید دید؛",
      "footnotes": ""
    },
    {
      "id": "6176",
      "sura": "102",
      "aya": "8",
      "arabic_text": "ثُمَّ لَتُسۡـَٔلُنَّ يَوۡمَئِذٍ عَنِ ٱلنَّعِيمِ",
      "translation": "آنگاه قطعاً در آن روز، از [تمام] نعمت‌ها بازخواست خواهید شد.",
      "footnotes": ""
    }
  ]
}
