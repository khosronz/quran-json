{
  "result": [
    {
      "id": "6107",
      "sura": "96",
      "aya": "1",
      "arabic_text": "ٱقۡرَأۡ بِٱسۡمِ رَبِّكَ ٱلَّذِي خَلَقَ",
      "translation": "بخوان به نام پروردگارت که [هستی را] آفرید؛",
      "footnotes": ""
    },
    {
      "id": "6108",
      "sura": "96",
      "aya": "2",
      "arabic_text": "خَلَقَ ٱلۡإِنسَٰنَ مِنۡ عَلَقٍ",
      "translation": "[همان پروردگاری که] انسان را از خونِ بسته آفرید.",
      "footnotes": ""
    },
    {
      "id": "6109",
      "sura": "96",
      "aya": "3",
      "arabic_text": "ٱقۡرَأۡ وَرَبُّكَ ٱلۡأَكۡرَمُ",
      "translation": "بخوان و پروردگارت [از همه] بزرگوار‌تر است.",
      "footnotes": ""
    },
    {
      "id": "6110",
      "sura": "96",
      "aya": "4",
      "arabic_text": "ٱلَّذِي عَلَّمَ بِٱلۡقَلَمِ",
      "translation": "[همان] ذاتی ‌که به وسیلۀ قلم [نوشتن] آموخت.",
      "footnotes": ""
    },
    {
      "id": "6111",
      "sura": "96",
      "aya": "5",
      "arabic_text": "عَلَّمَ ٱلۡإِنسَٰنَ مَا لَمۡ يَعۡلَمۡ",
      "translation": "به انسان آنچه را که نمی‌دانست [به تدریج] آموخت.",
      "footnotes": ""
    },
    {
      "id": "6112",
      "sura": "96",
      "aya": "6",
      "arabic_text": "كَلَّآ إِنَّ ٱلۡإِنسَٰنَ لَيَطۡغَىٰٓ",
      "translation": "چنین نیست [که شما می‌پندارید]؛ حقا که انسان طغیان [و سرکشی] می‌کند",
      "footnotes": ""
    },
    {
      "id": "6113",
      "sura": "96",
      "aya": "7",
      "arabic_text": "أَن رَّءَاهُ ٱسۡتَغۡنَىٰٓ",
      "translation": "[بعد] از اینکه خود را بی‌نیاز [و توانگر] ببیند.",
      "footnotes": ""
    },
    {
      "id": "6114",
      "sura": "96",
      "aya": "8",
      "arabic_text": "إِنَّ إِلَىٰ رَبِّكَ ٱلرُّجۡعَىٰٓ",
      "translation": "یقیناً بازگشت [همه] به سوی پروردگار توست.",
      "footnotes": ""
    },
    {
      "id": "6115",
      "sura": "96",
      "aya": "9",
      "arabic_text": "أَرَءَيۡتَ ٱلَّذِي يَنۡهَىٰ",
      "translation": "[ای پیامبر،] آیا دیده‌ای آن کسی [= ابوجهل] را که [از عبادت الله] باز می‌دارد",
      "footnotes": ""
    },
    {
      "id": "6116",
      "sura": "96",
      "aya": "10",
      "arabic_text": "عَبۡدًا إِذَا صَلَّىٰٓ",
      "translation": "بنده‌ای [= محمد] را هنگامی که [کنار کعبه] نماز می‌خواند.",
      "footnotes": ""
    },
    {
      "id": "6117",
      "sura": "96",
      "aya": "11",
      "arabic_text": "أَرَءَيۡتَ إِن كَانَ عَلَى ٱلۡهُدَىٰٓ",
      "translation": "به من خبر بده اگر این [بنده بازداشته‌شده] بر [راه] هدایت باشد",
      "footnotes": ""
    },
    {
      "id": "6118",
      "sura": "96",
      "aya": "12",
      "arabic_text": "أَوۡ أَمَرَ بِٱلتَّقۡوَىٰٓ",
      "translation": "یا [مردم را] به پرهیزگاری فرمان دهد، [سزای کسی‌ که چنین بنده‌ای را بیازارد چیست؟]",
      "footnotes": ""
    },
    {
      "id": "6119",
      "sura": "96",
      "aya": "13",
      "arabic_text": "أَرَءَيۡتَ إِن كَذَّبَ وَتَوَلَّىٰٓ",
      "translation": "به من خبر بده اگر این [شخص سرکش، حق را] تکذیب کند و رویگردان شود [آیا سزاوار عذاب نیست؟].",
      "footnotes": ""
    },
    {
      "id": "6120",
      "sura": "96",
      "aya": "14",
      "arabic_text": "أَلَمۡ يَعۡلَم بِأَنَّ ٱللَّهَ يَرَىٰ",
      "translation": "آیا نمی‌داند که بی‌تردید، الله [همه اعمالش را] می‌بیند؟",
      "footnotes": ""
    },
    {
      "id": "6121",
      "sura": "96",
      "aya": "15",
      "arabic_text": "كَلَّا لَئِن لَّمۡ يَنتَهِ لَنَسۡفَعَۢا بِٱلنَّاصِيَةِ",
      "translation": "چنین نیست [که او گمان می‌کند]؛ اگر باز نیاید [و دست از شرارت برندارد،] قطعاً موی پیشانی [او] را به شدّت خواهیم گرفت [و به سوی دوزخ خواهیم کشاند]؛",
      "footnotes": ""
    },
    {
      "id": "6122",
      "sura": "96",
      "aya": "16",
      "arabic_text": "نَاصِيَةٖ كَٰذِبَةٍ خَاطِئَةٖ",
      "translation": "موی پیشانیِ [همان] دروغگوی خطاکار را.",
      "footnotes": ""
    },
    {
      "id": "6123",
      "sura": "96",
      "aya": "17",
      "arabic_text": "فَلۡيَدۡعُ نَادِيَهُۥ",
      "translation": "پس باید هم‌مجلسانش را [به کمک] بخواند.",
      "footnotes": ""
    },
    {
      "id": "6124",
      "sura": "96",
      "aya": "18",
      "arabic_text": "سَنَدۡعُ ٱلزَّبَانِيَةَ",
      "translation": "ما [نیز] آتشبانان [دوزخ] را فرا خواهیم ‌خواند.",
      "footnotes": ""
    },
    {
      "id": "6125",
      "sura": "96",
      "aya": "19",
      "arabic_text": "كَلَّا لَا تُطِعۡهُ وَٱسۡجُدۡۤ وَٱقۡتَرِب۩",
      "translation": "چنین نیست [که او می‌پندارد]؛ هرگز او را اطاعت مکن و سجده کن، و [به الله] تقرّب جوی.",
      "footnotes": ""
    }
  ]
}
