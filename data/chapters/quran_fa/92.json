{
  "result": [
    {
      "id": "6059",
      "sura": "92",
      "aya": "1",
      "arabic_text": "وَٱلَّيۡلِ إِذَا يَغۡشَىٰ",
      "translation": "سوگند به شب، هنگامی ‌که [همه چیز را] بپوشانَد،",
      "footnotes": ""
    },
    {
      "id": "6060",
      "sura": "92",
      "aya": "2",
      "arabic_text": "وَٱلنَّهَارِ إِذَا تَجَلَّىٰ",
      "translation": "و سوگند به روز، هنگامی‌ که آشکار شود،",
      "footnotes": ""
    },
    {
      "id": "6061",
      "sura": "92",
      "aya": "3",
      "arabic_text": "وَمَا خَلَقَ ٱلذَّكَرَ وَٱلۡأُنثَىٰٓ",
      "translation": "و سوگند به ذاتی که نر و ماده را آفرید،",
      "footnotes": ""
    },
    {
      "id": "6062",
      "sura": "92",
      "aya": "4",
      "arabic_text": "إِنَّ سَعۡيَكُمۡ لَشَتَّىٰ",
      "translation": "که یقیناً سعی [و تلاش] شما مختلف [و نیک و بد] است.",
      "footnotes": ""
    },
    {
      "id": "6063",
      "sura": "92",
      "aya": "5",
      "arabic_text": "فَأَمَّا مَنۡ أَعۡطَىٰ وَٱتَّقَىٰ",
      "translation": "و اما کسی‌ که [در راه الله] ببخشد و پرهیزگاری نماید",
      "footnotes": ""
    },
    {
      "id": "6064",
      "sura": "92",
      "aya": "6",
      "arabic_text": "وَصَدَّقَ بِٱلۡحُسۡنَىٰ",
      "translation": "و [وعدۀ الله و سخنان] نیک را تصدیق کند،",
      "footnotes": ""
    },
    {
      "id": "6065",
      "sura": "92",
      "aya": "7",
      "arabic_text": "فَسَنُيَسِّرُهُۥ لِلۡيُسۡرَىٰ",
      "translation": "به زودی انجام [کار خیر و] آسانی [= اعمال نیکو و انفاق در راه الله] را برایش آسان می‌کنیم.",
      "footnotes": ""
    },
    {
      "id": "6066",
      "sura": "92",
      "aya": "8",
      "arabic_text": "وَأَمَّا مَنۢ بَخِلَ وَٱسۡتَغۡنَىٰ",
      "translation": "و اما کسی‌که بخل ورزد و بی‌نیازی بجوید،",
      "footnotes": ""
    },
    {
      "id": "6067",
      "sura": "92",
      "aya": "9",
      "arabic_text": "وَكَذَّبَ بِٱلۡحُسۡنَىٰ",
      "translation": "و [وعدۀ الله و سخنانِ] نیک را تکذیب کند،",
      "footnotes": ""
    },
    {
      "id": "6068",
      "sura": "92",
      "aya": "10",
      "arabic_text": "فَسَنُيَسِّرُهُۥ لِلۡعُسۡرَىٰ",
      "translation": "به زودی انجام دشواری [= اعمال شر و پلید] را برایش آسان می‌سازیم [و انجام کار خیر را بر او سخت می‌گردانیم]؛",
      "footnotes": ""
    },
    {
      "id": "6069",
      "sura": "92",
      "aya": "11",
      "arabic_text": "وَمَا يُغۡنِي عَنۡهُ مَالُهُۥٓ إِذَا تَرَدَّىٰٓ",
      "translation": "و در هنگام [مرگ و] ورود به دوزخ، دارایی او سودی به حالش نخواهد داشت.",
      "footnotes": ""
    },
    {
      "id": "6070",
      "sura": "92",
      "aya": "12",
      "arabic_text": "إِنَّ عَلَيۡنَا لَلۡهُدَىٰ",
      "translation": "مسلماً هدایت [بندگان] بر [عهدۀ] ماست.",
      "footnotes": ""
    },
    {
      "id": "6071",
      "sura": "92",
      "aya": "13",
      "arabic_text": "وَإِنَّ لَنَا لَلۡأٓخِرَةَ وَٱلۡأُولَىٰ",
      "translation": "و محققاً آخرت و دنیا [نیز] از آنِ ماست.",
      "footnotes": ""
    },
    {
      "id": "6072",
      "sura": "92",
      "aya": "14",
      "arabic_text": "فَأَنذَرۡتُكُمۡ نَارٗا تَلَظَّىٰ",
      "translation": "من شما را از آتشی شعله‌ور بیم دادم",
      "footnotes": ""
    },
    {
      "id": "6073",
      "sura": "92",
      "aya": "15",
      "arabic_text": "لَا يَصۡلَىٰهَآ إِلَّا ٱلۡأَشۡقَى",
      "translation": "که جز بدبخت‌ترین [مردم] در آن نیفتد؛",
      "footnotes": ""
    },
    {
      "id": "6074",
      "sura": "92",
      "aya": "16",
      "arabic_text": "ٱلَّذِي كَذَّبَ وَتَوَلَّىٰ",
      "translation": "[همان] کسی ‌که [آیات ما را] تکذیب کرد و روی گرداند",
      "footnotes": ""
    },
    {
      "id": "6075",
      "sura": "92",
      "aya": "17",
      "arabic_text": "وَسَيُجَنَّبُهَا ٱلۡأَتۡقَى",
      "translation": "و به زودی پرهیزگارترین [مردم] از آن دور نگه داشته می‌شود.",
      "footnotes": ""
    },
    {
      "id": "6076",
      "sura": "92",
      "aya": "18",
      "arabic_text": "ٱلَّذِي يُؤۡتِي مَالَهُۥ يَتَزَكَّىٰ",
      "translation": "[همان] کسی‌که مال خود را [در راه الله] می‌بخشد تا [از گناه] پاک شود.",
      "footnotes": ""
    },
    {
      "id": "6077",
      "sura": "92",
      "aya": "19",
      "arabic_text": "وَمَا لِأَحَدٍ عِندَهُۥ مِن نِّعۡمَةٖ تُجۡزَىٰٓ",
      "translation": "و هیچ كس را به قصد پاداش‌یافتن نعمت نمى‌بخشد؛",
      "footnotes": ""
    },
    {
      "id": "6078",
      "sura": "92",
      "aya": "20",
      "arabic_text": "إِلَّا ٱبۡتِغَآءَ وَجۡهِ رَبِّهِ ٱلۡأَعۡلَىٰ",
      "translation": "مگر [برای] کسبِ رضا [و خشنودی] پروردگار برترش.",
      "footnotes": ""
    },
    {
      "id": "6079",
      "sura": "92",
      "aya": "21",
      "arabic_text": "وَلَسَوۡفَ يَرۡضَىٰ",
      "translation": "و به راستی که [با پاداشِ الله] راضی خواهد شد.",
      "footnotes": ""
    }
  ]
}
